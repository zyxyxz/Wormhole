# Server
# Bind address and port for Uvicorn
HOST=0.0.0.0
PORT=8000

# Database
# SQLite file path (relative to backend root)
DATABASE_PATH=wormhole.db

# WeChat Mini Program (optional; dev will use dev_{code} if unset)
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# COS (optional; if you later replace local upload with COS)
COS_SECRET_ID=
COS_SECRET_KEY=
COS_REGION=ap-guangzhou
COS_BUCKET=

# OSS (Aliyun; required for OSS uploads)
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET=
# Optional: public base URL or CDN/custom domain, e.g. https://cdn.example.com
OSS_BASE_URL=
# Optional: prefix for all object keys
OSS_PREFIX=
# Optional: OSS image processing presets
OSS_IMAGE_PROCESS_CHAT=image/resize,m_lfit,w_1080/quality,q_80
OSS_IMAGE_PROCESS_FEED=image/resize,m_lfit,w_1280/quality,q_80
OSS_IMAGE_PROCESS_AVATAR=image/resize,m_lfit,w_256/quality,q_80

# Super admin config
SUPER_ADMIN_OPENIDS=oeGzH5XJLcl-i9K5XvkBS0g-mbec
SUPER_ADMIN_ROOM_CODE=201432
