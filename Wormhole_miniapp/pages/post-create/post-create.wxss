.container { padding: 24rpx; }
.content { height: 240rpx; background: #f5f5f5; border-radius: 8rpx; padding: 20rpx; }
.media-actions { display: flex; gap: 12rpx; margin: 16rpx 0; }
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 6rpx; margin: 10rpx 0; }
.image { width: 100%; height: 200rpx; border-radius: 8rpx; }
.video { width: 100%; border-radius: 8rpx; margin: 10rpx 0; }
.submit { margin-top: 12rpx; }

