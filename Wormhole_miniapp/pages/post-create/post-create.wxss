page { background: #F4F7FB; }
.page {
  min-height: 100vh;
  padding: 24rpx;
  position: relative;
  font-family: "PingFang SC", "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  color: #0F172A;
}
.bg-orb {
  position: fixed;
  width: 420rpx;
  height: 420rpx;
  border-radius: 50%;
  filter: blur(0);
  opacity: 0.35;
  z-index: 0;
}
.orb-one {
  top: -120rpx;
  right: -160rpx;
  background: radial-gradient(circle at 30% 30%, #A7F3D0, #60A5FA);
}
.orb-two {
  bottom: -120rpx;
  left: -140rpx;
  background: radial-gradient(circle at 30% 30%, #FDE68A, #FCA5A5);
}
.hero { position: relative; z-index: 1; padding: 8rpx 8rpx 18rpx; }
.hero-title { font-size: 40rpx; font-weight: 700; letter-spacing: 2rpx; }
.hero-sub { margin-top: 6rpx; font-size: 26rpx; color: #64748B; }

.composer {
  position: relative;
  z-index: 1;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(15,23,42,0.08);
  border: 1rpx solid rgba(148,163,184,0.2);
}
.composer-input {
  min-height: 220rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #0F172A;
}
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 10rpx; margin-top: 16rpx; }
.image { width: 100%; height: 200rpx; border-radius: 14rpx; }
.video { width: 100%; border-radius: 16rpx; margin-top: 16rpx; }

.toolbar { display: flex; align-items: center; gap: 12rpx; margin-top: 18rpx; flex-wrap: wrap; }
.tool-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(15,118,110,0.22);
  background: rgba(15,118,110,0.08);
  color: #0F766E;
  font-size: 24rpx;
}
.tool-icon { font-size: 28rpx; }
.tool-tip { font-size: 22rpx; color: #94A3B8; margin-left: auto; }

.publish-bar {
  position: relative;
  z-index: 1;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.publish-btn {
  min-width: 220rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #22D3EE, #34D399);
  color: #0F172A;
  font-weight: 700;
  letter-spacing: 2rpx;
  box-shadow: 0 12rpx 26rpx rgba(16,185,129,0.25);
}
