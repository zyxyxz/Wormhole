page { background: var(--bg); }
.page {
  min-height: 100vh;
  padding: 24rpx;
  position: relative;
  font-family: "PingFang SC", "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  color: var(--text);
}
.bg-orb {
  position: fixed;
  width: 420rpx;
  height: 420rpx;
  border-radius: 50%;
  filter: blur(0);
  opacity: 0.35;
  z-index: 0;
}
.orb-one {
  top: -120rpx;
  right: -160rpx;
  background: radial-gradient(circle at 30% 30%, var(--accent-mint), var(--accent-indigo));
}
.orb-two {
  bottom: -120rpx;
  left: -140rpx;
  background: radial-gradient(circle at 30% 30%, var(--accent-amber), var(--accent-rose));
}
.hero { position: relative; z-index: 1; padding: 8rpx 8rpx 18rpx; }
.hero-title { font-size: 40rpx; font-weight: 700; letter-spacing: 2rpx; }
.hero-sub { margin-top: 6rpx; font-size: 26rpx; color: var(--text-muted); }

.composer {
  position: relative;
  z-index: 1;
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-soft);
  border: 1rpx solid var(--border);
}
.composer-input {
  min-height: 220rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: var(--text);
}
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 10rpx; margin-top: 16rpx; }
.image { width: 100%; height: 200rpx; border-radius: 14rpx; }
.video { width: 100%; border-radius: 16rpx; margin-top: 16rpx; }
.live-preview {
  width: 100%;
  max-width: 420rpx;
  height: 420rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
  overflow: hidden;
  position: relative;
  background: #0f172a;
}
.live-cover { width: 100%; height: 100%; }
.live-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(15, 23, 42, 0.45), rgba(15, 23, 42, 0.08));
  display: flex;
  align-items: center;
  justify-content: center;
}
.live-play {
  width: 0;
  height: 0;
  border-top: 18rpx solid transparent;
  border-bottom: 18rpx solid transparent;
  border-left: 26rpx solid #ffffff;
  margin-left: 6rpx;
}
.live-tag {
  position: absolute;
  right: 12rpx;
  top: 12rpx;
  background: rgba(15, 23, 42, 0.66);
  color: #ffffff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.toolbar { display: flex; align-items: center; gap: 12rpx; margin-top: 18rpx; flex-wrap: wrap; }
.tool-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(15,118,110,0.22);
  background: rgba(15,118,110,0.08);
  color: var(--primary-strong);
  font-size: 24rpx;
}
.tool-icon { font-size: 28rpx; }
.tool-tip { font-size: 22rpx; color: var(--text-muted); margin-left: auto; }

.publish-bar {
  position: relative;
  z-index: 1;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.publish-btn {
  min-width: 220rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, var(--accent-cyan), var(--accent-green));
  color: #0F172A;
  font-weight: 700;
  letter-spacing: 2rpx;
  box-shadow: var(--shadow-soft);
}
