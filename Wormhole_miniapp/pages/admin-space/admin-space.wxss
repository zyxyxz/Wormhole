page {
  background: #F8FAFC;
  color: #0F172A;
}

.page {
  padding: 24rpx 28rpx 60rpx;
}

.hero-card {
  background: linear-gradient(135deg, #E0F2FE, #E0E7FF);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.12);
}

.hero-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.hero-sub {
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.6);
}

.hero-actions {
  margin-top: 18rpx;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin: 24rpx 0 16rpx;
}

.stat-item {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.08);
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
}

.section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.card {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 16rpx 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.08);
}

.member-row {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.member-row:last-child { border-bottom: none; }

.member-name {
  font-size: 26rpx;
  font-weight: 600;
}

.member-id {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
}

.activity {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.activity:last-child { border-bottom: none; }

.activity-meta {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
  margin-bottom: 6rpx;
}

.activity-content {
  font-size: 24rpx;
  color: #0F172A;
}

.empty {
  text-align: center;
  padding: 18rpx 0;
  color: rgba(15, 23, 42, 0.5);
}

.ghost {
  background: #FFFFFF;
  color: #2563EB;
  border: 1rpx solid rgba(37, 99, 235, 0.3);
}
