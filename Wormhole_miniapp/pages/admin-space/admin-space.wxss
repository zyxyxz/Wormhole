page {
  background: #F8FAFC;
  color: #0F172A;
}

.page {
  padding: 24rpx 28rpx 60rpx;
}

.hero-card {
  background: linear-gradient(135deg, #E0F2FE, #E0E7FF);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.12);
}

.hero-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.hero-sub {
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.6);
}

.hero-actions {
  margin-top: 18rpx;
}

.filter-card {
  margin-top: 16rpx;
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 16rpx 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.08);
}

.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.filter-left, .filter-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.filter-label {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.7);
}

.limit-input {
  width: 90rpx;
  height: 52rpx;
  border-radius: 12rpx;
  border: 1rpx solid #E2E8F0;
  padding: 0 12rpx;
  font-size: 22rpx;
  background: #F8FAFC;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin: 24rpx 0 16rpx;
}

.stat-item {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.08);
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
}

.section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.card {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 16rpx 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.08);
}

.member-row {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.member-row:last-child { border-bottom: none; }

.member-name {
  font-size: 26rpx;
  font-weight: 600;
}

.member-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.member-tag {
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  background: rgba(37, 99, 235, 0.12);
  color: #2563EB;
}

.member-id {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
}

.activity {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.activity:last-child { border-bottom: none; }

.activity-meta {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
  margin-bottom: 6rpx;
}

.tag-deleted {
  margin-left: 10rpx;
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(239, 68, 68, 0.12);
  color: #EF4444;
  font-size: 20rpx;
}

.activity-content {
  font-size: 24rpx;
  color: #0F172A;
}

.activity-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #0F172A;
  margin-bottom: 6rpx;
}

.media-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  margin-top: 10rpx;
}

.media-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.media-image.single {
  width: 220rpx;
  height: 220rpx;
  margin-top: 10rpx;
}

.media-video {
  width: 100%;
  border-radius: 12rpx;
  margin-top: 10rpx;
}

.empty {
  text-align: center;
  padding: 18rpx 0;
  color: rgba(15, 23, 42, 0.5);
}

.ghost {
  background: #FFFFFF;
  color: #2563EB;
  border: 1rpx solid rgba(37, 99, 235, 0.3);
}
