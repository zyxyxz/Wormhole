<!--index.wxml-->
<view class="index-root theme-root {{themeClass}}">
  <navigation-bar title="" back="{{false}}" home-button="{{false}}" background="{{themeNavBg}}" color="{{themeNavText}}" />
  <scroll-view class="scrollarea" scroll-y="true" type="list">
    <view class="aurora-bg">
      <view class="blob blob-a"></view>
      <view class="blob blob-b"></view>
      <view class="blob blob-c"></view>
      <view class="grid-glow"></view>
    </view>
    <view class="container">
      <view class="header">
        <view class="brand">
          <view class="brand-logo">WH</view>
          <view class="brand-text">
            <text class="brand-title">{{reviewMode ? '私人日记本' : '虫洞'}}</text>
            <text class="brand-subtitle">{{reviewMode ? 'Private Diary' : 'Private Space'}}</text>
          </view>
        </view>
        <view class="join-pill" bindtap="goJoinByShare">口令加入</view>
      </view>

      <view class="bottom-stack">
        <view class="enter-card">
          <view class="input-display">
            <view wx:for="{{spaceCode}}" wx:key="index" class="code-slot">
              <view wx:if="{{item !== ''}}" class="code-dot"></view>
            </view>
          </view>
        </view>

        <view class="keypad-wrap">
          <view class="keypad">
            <view wx:for="{{[1,2,3,4,5,6,7,8,9,'',0,'删除']}}"
                  wx:key="index"
                  class="key-button {{item === '' ? 'key-empty' : ''}} {{item === '删除' ? 'key-delete' : ''}}"
                  bindtap="onKeyTap"
                  data-key="{{item}}">
              <text class="key-text">{{item}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
