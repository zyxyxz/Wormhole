<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y="false" type="list">
  <view class="aurora-bg">
    <view class="blob cyan" style="width: 320rpx; height: 320rpx; top: -80rpx; left: -40rpx;"></view>
    <view class="blob purple" style="width: 420rpx; height: 420rpx; top: 220rpx; right: -160rpx;"></view>
    <view class="blob pink" style="width: 300rpx; height: 300rpx; bottom: -120rpx; left: 120rpx;"></view>
  </view>
  <view class="container">
    <view class="top-actions">
      <view class="link" bindtap="goJoinByShare">口令加入</view>
    </view>
    <view class="title-neo">虫洞私密共享空间</view>
    <view class="subtitle-neo">输入6位空间号，进入你的共享空间</view>

    <view class="spacer"></view>

    <view class="enter-area">
      <view class="input-display">
        <text wx:for="{{spaceCode}}" wx:key="index" class="code-digit">{{hideCode ? '•' : item}}</text>
        <button class="eye-btn" bindtap="toggleHide">{{hideCode ? '显示' : '隐藏'}}</button>
      </view>
      <view class="keypad">
        <view wx:for="{{[1,2,3,4,5,6,7,8,9,'',0,'删除']}}" 
              wx:key="index" 
              class="key-button {{item === '' ? 'key-empty' : ''}}"
              bindtap="onKeyTap"
              data-key="{{item}}">
          {{item}}
        </view>
      </view>
    </view>
  </view>
</scroll-view>
