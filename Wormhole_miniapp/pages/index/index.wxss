/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-actions { width: 100%; display: flex; justify-content: flex-end; }
.top-actions .link { color: #9AA0A6; font-size: 26rpx; }

.title { font-size: 44rpx; font-weight: 800; margin: 30rpx 0 8rpx; color: #111; }
.subtitle { color: #666; margin-bottom: 40rpx; }

.keypad-container {
  width: 100%;
}

.input-display { display: flex; justify-content: center; margin-bottom: 30rpx; gap: 12rpx; }

.code-digit { width: 80rpx; height: 80rpx; border: 2rpx solid #E3E7EB; display: flex; align-items: center; justify-content: center; font-size: 40rpx; border-radius: 12rpx; background: #fff; }

.keypad { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20rpx; margin-bottom: 30rpx; }

.key-button { height: 100rpx; display: flex; align-items: center; justify-content: center; background: #F1F3F4; border-radius: 12rpx; font-size: 36rpx; }

.key-empty {
  background: transparent;
}

.confirm-button { width: 100%; height: 88rpx; background: #0A84FF; color: white; border-radius: 12rpx; }

.join-share { display: none; }
