/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg);
  color: var(--text);
  font-family: "ZCOOL XiaoWei", "Songti SC", "STSong", "PingFang SC", serif;
}

.index-root {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.scrollarea { flex: 1; }

.aurora-bg {
  position: fixed;
  inset: 0;
  overflow: hidden;
  z-index: 0;
  background: radial-gradient(1200rpx 600rpx at 50% -20%, var(--glow-soft), transparent 70%),
              linear-gradient(180deg, var(--bg) 0%, var(--bg-secondary) 55%, var(--bg) 100%);
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(0);
  opacity: 0.35;
  animation: float 10s ease-in-out infinite;
}
.blob-a { width: 320rpx; height: 320rpx; background: radial-gradient(circle at 30% 30%, var(--accent-blue), transparent 60%); top: -80rpx; left: -40rpx; }
.blob-b { width: 420rpx; height: 420rpx; background: radial-gradient(circle at 30% 30%, var(--accent-indigo), transparent 65%); top: 180rpx; right: -160rpx; animation-delay: -2s; }
.blob-c { width: 300rpx; height: 300rpx; background: radial-gradient(circle at 30% 30%, var(--accent-mint), transparent 60%); bottom: -120rpx; left: 120rpx; animation-delay: -4s; }

.grid-glow {
  position: absolute;
  inset: 0;
  background-image: linear-gradient(var(--grid-line) 1px, transparent 1px),
                    linear-gradient(90deg, var(--grid-line) 1px, transparent 1px);
  background-size: 60rpx 60rpx;
  mask-image: radial-gradient(circle at 50% 30%, black 10%, transparent 70%);
  opacity: 0.2;
}

.container {
  position: relative;
  z-index: 1;
  min-height: 100vh;
  padding: 40rpx 40rpx calc(50rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.brand {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.brand-logo {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, var(--accent-indigo), var(--accent-green));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  letter-spacing: 2rpx;
  box-shadow: var(--shadow-strong);
}

.brand-text { display: flex; flex-direction: column; }
.brand-title { font-size: 34rpx; font-weight: 700; color: var(--text); }
.brand-subtitle { font-size: 20rpx; color: var(--text-muted); letter-spacing: 1rpx; }

.join-pill {
  padding: 12rpx 22rpx;
  border-radius: 999rpx;
  border: 1rpx solid var(--border);
  color: var(--text);
  font-size: 24rpx;
  background: var(--surface-alt);
  backdrop-filter: blur(6rpx);
}

.bottom-stack {
  margin-top: auto;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.enter-card {
  padding: 28rpx;
  border-radius: 24rpx;
  background: var(--surface-alt);
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-panel);
}

.input-display {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 6rpx;
}

.code-slot {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  background: var(--bg);
  border: 1rpx solid var(--border);
  display: flex;
  align-items: center;
  justify-content: center;
}

.code-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--text);
  box-shadow: 0 0 14rpx rgba(15,23,42,0.2);
}

.keypad-wrap { padding-bottom: 10rpx; }

.keypad {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx;
}

.key-button {
  height: 102rpx;
  border-radius: 20rpx;
  background: var(--surface);
  border: 1rpx solid var(--border);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-soft);
}

.key-button:active { transform: scale(0.98); }

.key-text {
  font-size: 34rpx;
  color: var(--text);
  font-family: "SF Pro Rounded", "DIN Alternate", "PingFang SC", sans-serif;
}

.key-delete .key-text { font-size: 26rpx; color: var(--text-muted); }

.key-empty { background: transparent; border-color: transparent; box-shadow: none; }

@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
  100% { transform: translateY(0); }
}
