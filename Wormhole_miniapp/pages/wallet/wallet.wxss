.wallet-container { padding: 30rpx; }

.balance-card { background: linear-gradient(135deg, #5EEAD4, #22D3EE); border-radius: 24rpx; padding: 40rpx; color: #0F172A; margin-bottom: 40rpx; box-shadow: 0 16rpx 34rpx rgba(45,212,191,0.25); }

.balance-title {
  font-size: 28rpx;
  opacity: 0.8;
}

.balance-amount {
  font-size: 60rpx;
  font-weight: bold;
  margin: 20rpx 0 40rpx;
}

.balance-actions {
  display: flex;
  gap: 20rpx;
}

.action-button { flex: 1; height: 80rpx; line-height: 80rpx; background: rgba(255, 255, 255, 0.9); border: 1rpx solid #BAF2E3; color: #0F172A; font-size: 28rpx; border-radius: 12rpx; }

.transaction-list { background: #FFFFFF; border-radius: 20rpx; padding: 30rpx; border: 1rpx solid #E2E8F0; box-shadow: 0 8rpx 24rpx rgba(2,132,199,0.08); }

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.transaction-type {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.income {
  color: #07c160;
}

.expense {
  color: #ff4d4f;
}

.pay-code-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.pay-code {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx 0;
}

.close-button {
  margin-top: 30rpx;
  background: #f5f5f5;
} 
