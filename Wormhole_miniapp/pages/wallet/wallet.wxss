page { overflow: hidden; }

.wallet-container {
  height: calc(100vh - 44px - constant(safe-area-inset-top));
  height: calc(100vh - 44px - env(safe-area-inset-top));
  display: flex;
  flex-direction: column;
  background: var(--bg);
  color: var(--text);
}

.wallet-scroll {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}

.balance-card { background: linear-gradient(135deg, var(--accent-teal), var(--accent-cyan)); border-radius: 24rpx; padding: 40rpx; color: #0F172A; margin-bottom: 40rpx; box-shadow: var(--shadow-strong); }

.balance-title {
  font-size: 28rpx;
  opacity: 0.8;
}

.balance-amount {
  font-size: 60rpx;
  font-weight: bold;
  margin: 20rpx 0 40rpx;
}

.balance-actions {
  display: flex;
  gap: 20rpx;
}

.action-button { flex: 1; height: 80rpx; line-height: 80rpx; background: var(--surface-alt); border: 1rpx solid var(--border); color: var(--text); font-size: 28rpx; border-radius: 12rpx; }

.transaction-list { background: var(--surface); border-radius: 20rpx; padding: 30rpx; border: 1rpx solid var(--border); box-shadow: var(--shadow); }

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.transaction-type {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: var(--text-muted);
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.income {
  color: var(--success);
}

.expense {
  color: var(--danger);
}

.pay-code-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: var(--surface);
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: var(--text);
}

.pay-code {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx 0;
}

.close-button {
  margin-top: 30rpx;
  background: var(--bg-secondary);
} 
