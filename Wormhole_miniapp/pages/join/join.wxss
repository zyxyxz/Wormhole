page { background: var(--bg); overflow: hidden; }
.join-root {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.page {
  flex: 1;
  padding: 28rpx 24rpx 40rpx;
  position: relative;
  font-family: "PingFang SC", "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  color: var(--text);
}
.bg-orb {
  position: fixed;
  width: 420rpx;
  height: 420rpx;
  border-radius: 50%;
  opacity: 0.32;
  z-index: 0;
}
.orb-one {
  top: -140rpx;
  left: -120rpx;
  background: radial-gradient(circle at 30% 30%, var(--accent-sky), var(--accent-mint));
}
.orb-two {
  bottom: -140rpx;
  right: -140rpx;
  background: radial-gradient(circle at 30% 30%, var(--accent-pink), var(--accent-amber));
}
.header { position: relative; z-index: 1; padding: 6rpx 6rpx 24rpx; }
.title { font-size: 42rpx; font-weight: 700; letter-spacing: 2rpx; }
.subtitle { margin-top: 6rpx; font-size: 26rpx; color: var(--text-muted); }

.card {
  position: relative;
  z-index: 1;
  background: var(--surface);
  border-radius: 22rpx;
  padding: 22rpx;
  box-shadow: var(--shadow-soft);
  border: 1rpx solid var(--border);
  margin-bottom: 18rpx;
}
.step { display: flex; align-items: center; gap: 16rpx; margin-bottom: 14rpx; }
.step-index {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: rgba(59,130,246,0.12);
  color: var(--accent-indigo);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
}
.step-body { display: flex; flex-direction: column; gap: 4rpx; }
.step-title { font-size: 28rpx; font-weight: 600; }
.step-desc { font-size: 24rpx; color: var(--text-muted); }

.input {
  height: 88rpx;
  border-radius: 16rpx;
  padding: 0 22rpx;
  background: var(--input);
  border: 1rpx solid var(--border);
  font-size: 28rpx;
  color: var(--text);
}

.footer { position: relative; z-index: 1; margin-top: 10rpx; }
.submit {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, var(--accent-blue), var(--accent-green));
  color: #0F172A;
  font-weight: 700;
  letter-spacing: 2rpx;
  box-shadow: var(--shadow-soft);
}
.hint { margin-top: 14rpx; text-align: center; color: var(--text-muted); font-size: 22rpx; }
