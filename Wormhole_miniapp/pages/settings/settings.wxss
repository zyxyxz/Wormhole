.settings-container {
  padding: 30rpx;
  padding-top: 20rpx;
}

.room-card {
  background: linear-gradient(135deg, rgba(20,184,166,0.12), rgba(14,165,233,0.12));
  border: 1rpx solid rgba(20,184,166,0.2);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(15,118,110,0.12);
}

.room-card-header { display: flex; align-items: center; gap: 20rpx; }
.avatar-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  background: rgba(255,255,255,0.8);
  color: #0F766E;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  overflow: hidden;
}
.avatar-circle image { width: 100%; height: 100%; object-fit: cover; }
.alias-row { display: flex; align-items: center; gap: 16rpx; }
.alias-text { font-size: 36rpx; font-weight: 600; color: #0F172A; }
.code-text { color: #0F766E; font-size: 26rpx; margin-top: 6rpx; }
.code-row { display: flex; align-items: center; gap: 16rpx; margin-top: 6rpx; }
.icon-button {
  border: none;
  padding: 4rpx 20rpx;
  background: rgba(15,118,110,0.12);
  color: #0F766E;
  border-radius: 999rpx;
  font-size: 24rpx;
}
.link-button {
  padding: 4rpx 20rpx;
  background: transparent;
  color: #0F766E;
  border: 1rpx solid rgba(15,118,110,0.3);
  border-radius: 999rpx;
  font-size: 24rpx;
}
.room-card-meta { display: flex; justify-content: space-between; margin-top: 20rpx; flex-wrap: wrap; gap: 20rpx; }
.meta-item { display: flex; flex-direction: column; gap: 10rpx; min-width: 200rpx; }
.meta-label { color: #475569; font-size: 24rpx; }
.meta-value { font-size: 28rpx; color: #0F172A; }
.meta-item.interactive { cursor: pointer; }
.member-avatars { display: flex; align-items: center; gap: 8rpx; flex-wrap: wrap; }
.avatar-mini { width: 48rpx; height: 48rpx; border-radius: 16rpx; background: rgba(255,255,255,0.9); color: #0F766E; display: flex; align-items: center; justify-content: center; font-size: 26rpx; font-weight: 600; box-shadow: inset 0 0 0 1rpx rgba(15,118,110,0.2); overflow: hidden; }
.avatar-mini image { width: 100%; height: 100%; object-fit: cover; }
.meta-count { color: #0F766E; font-size: 24rpx; }

.settings-group {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.settings-item:last-child {
  border-bottom: none;
}

.space-code {
  color: #999;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
}

.modal-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.space-input {
  background: #f5f5f5;
  height: 80rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-button, .confirm-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}

.cancel-button {
  background: #f5f5f5;
}

.confirm-button {
  background: #1296db;
  color: white;
}

.share-code {
  background: #f5f5f5;
  padding: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 30rpx 0;
  word-break: break-all;
}

.share-hint {
  text-align: center;
  font-size: 24rpx;
  color: #475569;
  margin-bottom: 20rpx;
}

.copy-button {
  background: #1296db;
  color: white;
  margin-bottom: 20rpx;
}

.close-button {
  background: #f5f5f5;
} 

.member-item { display: flex; justify-content: space-between; align-items: center; padding: 20rpx 30rpx; border-top: 1rpx solid #f5f5f5; }

.members-modal { max-height: 80vh; }
.members-scroll { max-height: 60vh; margin: 20rpx 0; }
.member-row { display: flex; align-items: center; gap: 20rpx; padding: 16rpx 0; border-bottom: 1rpx solid #f1f5f9; }
.member-row:last-child { border-bottom: none; }
.member-avatar { width: 72rpx; height: 72rpx; border-radius: 24rpx; background: #E2E8F0; color: #0F172A; display: flex; align-items: center; justify-content: center; font-weight: 600; overflow: hidden; }
.member-avatar image { width: 100%; height: 100%; object-fit: cover; }
.member-info { flex: 1; display: flex; flex-direction: column; }
.member-name { font-weight: 600; color: #0F172A; }
.member-id { font-size: 24rpx; color: #94A3B8; }
.member-actions { display: flex; gap: 12rpx; }
