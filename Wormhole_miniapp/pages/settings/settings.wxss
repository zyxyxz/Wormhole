.settings-container {
  padding: 30rpx;
}

.settings-group {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.settings-item:last-child {
  border-bottom: none;
}

.space-code {
  color: #999;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
}

.modal-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.space-input {
  background: #f5f5f5;
  height: 80rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-button, .confirm-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}

.cancel-button {
  background: #f5f5f5;
}

.confirm-button {
  background: #1296db;
  color: white;
}

.share-code {
  background: #f5f5f5;
  padding: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 30rpx 0;
  word-break: break-all;
}

.copy-button {
  background: #1296db;
  color: white;
  margin-bottom: 20rpx;
}

.close-button {
  background: #f5f5f5;
} 

.member-item { display: flex; justify-content: space-between; align-items: center; padding: 20rpx 30rpx; border-top: 1rpx solid #f5f5f5; }
