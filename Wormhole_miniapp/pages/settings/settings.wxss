page { overflow: hidden; }

.settings-container {
  height: calc(100vh - 44px - constant(safe-area-inset-top));
  height: calc(100vh - 44px - env(safe-area-inset-top));
  display: flex;
  flex-direction: column;
  background: var(--bg);
  color: var(--text);
}

.settings-scroll {
  flex: 1;
  padding: 30rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.room-card {
  background: linear-gradient(135deg, rgba(20,184,166,0.12), rgba(14,165,233,0.12));
  border: 1rpx solid rgba(20,184,166,0.2);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(15,118,110,0.12);
}

.room-card-header { display: flex; align-items: center; gap: 20rpx; }
.avatar-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  background: var(--surface-alt);
  color: var(--primary-strong);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  overflow: hidden;
}
.avatar-circle image { width: 100%; height: 100%; object-fit: cover; }
.alias-row { display: flex; align-items: center; gap: 16rpx; }
.alias-text { font-size: 36rpx; font-weight: 600; color: var(--text); }
.code-text { color: var(--primary-strong); font-size: 26rpx; margin-top: 6rpx; }
.code-row { display: flex; align-items: center; gap: 16rpx; margin-top: 6rpx; }
.icon-button {
  border: none;
  padding: 4rpx 20rpx;
  background: rgba(15,118,110,0.12);
  color: var(--primary-strong);
  border-radius: 999rpx;
  font-size: 24rpx;
}
.link-button {
  padding: 4rpx 20rpx;
  background: transparent;
  color: var(--primary-strong);
  border: 1rpx solid rgba(15,118,110,0.3);
  border-radius: 999rpx;
  font-size: 24rpx;
}

.picker-display { padding: 20rpx; border: 1rpx solid var(--border); border-radius: 12rpx; text-align: center; margin: 20rpx 0; }
.room-card-meta { display: flex; justify-content: space-between; margin-top: 20rpx; flex-wrap: wrap; gap: 20rpx; }
.meta-item { display: flex; flex-direction: column; gap: 10rpx; min-width: 200rpx; }
.meta-label { color: var(--text-muted); font-size: 24rpx; }
.meta-value { font-size: 28rpx; color: var(--text); }
.meta-item.interactive { cursor: pointer; }
.member-avatars { display: flex; align-items: center; gap: 8rpx; flex-wrap: wrap; }
.avatar-mini { width: 48rpx; height: 48rpx; border-radius: 16rpx; background: var(--surface-alt); color: var(--primary-strong); display: flex; align-items: center; justify-content: center; font-size: 26rpx; font-weight: 600; box-shadow: inset 0 0 0 1rpx rgba(15,118,110,0.2); overflow: hidden; }
.avatar-mini image { width: 100%; height: 100%; object-fit: cover; }
.meta-count { color: var(--primary-strong); font-size: 24rpx; }

.settings-group {
  background: var(--surface);
  border-radius: 20rpx;
  overflow: hidden;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border);
}

.settings-item:last-child {
  border-bottom: none;
}

.space-code {
  color: var(--text-muted);
  font-size: 28rpx;
}

.arrow {
  color: var(--text-muted);
  font-size: 32rpx;
}

.settings-item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: var(--surface);
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
}

.modal-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: var(--text);
}

.space-input {
  background: var(--bg-secondary);
  height: 80rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  color: var(--text);
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-button, .confirm-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}

.cancel-button {
  background: var(--bg-secondary);
}

.confirm-button {
  background: var(--primary);
  color: white;
}

.share-code {
  background: var(--bg-secondary);
  padding: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 30rpx 0;
  word-break: break-all;
}

.share-hint {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 20rpx;
}

.copy-button {
  background: var(--primary);
  color: white;
  margin-bottom: 20rpx;
}

.close-button {
  background: var(--bg-secondary);
} 

.member-item { display: flex; justify-content: space-between; align-items: center; padding: 20rpx 30rpx; border-top: 1rpx solid var(--border); }

.members-modal { max-height: 80vh; }
.members-scroll { max-height: 60vh; margin: 20rpx 0; }
.member-row { display: flex; align-items: center; gap: 20rpx; padding: 16rpx 0; border-bottom: 1rpx solid var(--border); }
.member-row:last-child { border-bottom: none; }
.member-avatar { width: 72rpx; height: 72rpx; border-radius: 24rpx; background: var(--bg-secondary); color: var(--text); display: flex; align-items: center; justify-content: center; font-weight: 600; overflow: hidden; }
.member-avatar image { width: 100%; height: 100%; object-fit: cover; }
.member-info { flex: 1; display: flex; flex-direction: column; }
.member-name { font-weight: 600; color: var(--text); }
.member-id { font-size: 24rpx; color: var(--text-muted); }
.member-actions { display: flex; gap: 12rpx; }

.danger-section {
  margin-top: 30rpx;
  padding: 18rpx 10rpx 10rpx;
  border-radius: 16rpx;
}

.danger-title {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-left: 6rpx;
  margin-bottom: 12rpx;
}

.danger-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 12rpx;
  border-radius: 14rpx;
  border: 1rpx dashed rgba(239, 68, 68, 0.4);
  background: rgba(239, 68, 68, 0.06);
}

.danger-text {
  font-size: 24rpx;
  color: var(--danger);
  letter-spacing: 1rpx;
}
