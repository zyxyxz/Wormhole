page {
  background: var(--bg);
  color: var(--text);
}

.page {
  padding: 24rpx 28rpx 60rpx;
}

.hero-card {
  background: linear-gradient(135deg, rgba(14,165,233,0.12), rgba(34,197,94,0.12));
  border-radius: 24rpx;
  padding: 26rpx;
  box-shadow: var(--shadow-strong);
  margin-bottom: 20rpx;
}

.hero-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}

.hero-sub {
  font-size: 22rpx;
  color: var(--text-muted);
}

.list-card {
  background: var(--surface);
  border-radius: 18rpx;
  padding: 12rpx 18rpx;
  box-shadow: var(--shadow);
}

.filter-card {
  background: var(--surface);
  border-radius: 18rpx;
  padding: 16rpx 18rpx;
  box-shadow: var(--shadow);
  margin-bottom: 18rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.filter-item.full {
  grid-column: span 2;
}

.filter-item {
  background: var(--bg-secondary);
  border-radius: 14rpx;
  padding: 12rpx 14rpx;
  border: 1rpx solid var(--border);
}

.filter-label {
  font-size: 20rpx;
  color: var(--text-muted);
}

.filter-value {
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 6rpx;
  color: var(--text);
}

.filter-input {
  margin-top: 6rpx;
  height: 60rpx;
  border-radius: 12rpx;
  padding: 0 12rpx;
  background: var(--input);
  border: 1rpx solid var(--border);
  font-size: 24rpx;
  color: var(--text);
}

.filter-actions {
  grid-column: span 2;
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  margin-top: 4rpx;
}

.primary {
  background: var(--primary);
  color: #FFFFFF;
}

.log-row {
  padding: 14rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.log-row:last-child { border-bottom: none; }
.log-row.view { opacity: 0.55; }

.log-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.log-user {
  font-size: 24rpx;
  font-weight: 600;
}

.log-action-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-weight: 600;
  background: var(--panel);
  color: var(--text-muted);
}
.log-action-tag.view { background: var(--panel); color: var(--text-muted); }
.log-action-tag.minor { background: rgba(14,165,233,0.12); color: #0284C7; }
.log-action-tag.normal { background: rgba(99,102,241,0.12); color: #4338CA; }
.log-action-tag.major { background: rgba(34,197,94,0.12); color: #16A34A; }
.log-action-tag.danger { background: rgba(248,113,113,0.16); color: #DC2626; }

.log-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: var(--text-muted);
  margin-bottom: 6rpx;
}
.log-page.muted { color: var(--text-muted); }

.log-detail {
  font-size: 22rpx;
  color: var(--text);
  background: var(--panel);
  border-radius: 12rpx;
  padding: 10rpx 12rpx;
}

.empty {
  text-align: center;
  padding: 20rpx 0;
  color: var(--text-muted);
}
