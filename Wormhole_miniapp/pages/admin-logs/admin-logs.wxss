page {
  background: #F8FAFC;
  color: #0F172A;
}

.page {
  padding: 24rpx 28rpx 60rpx;
}

.hero-card {
  background: linear-gradient(135deg, #E0F2FE, #DCFCE7);
  border-radius: 24rpx;
  padding: 26rpx;
  box-shadow: 0 18rpx 40rpx rgba(15, 23, 42, 0.1);
  margin-bottom: 20rpx;
}

.hero-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}

.hero-sub {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
}

.list-card {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 12rpx 18rpx;
  box-shadow: 0 12rpx 28rpx rgba(15, 23, 42, 0.08);
}

.filter-card {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 16rpx 18rpx;
  box-shadow: 0 12rpx 28rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 18rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.filter-item {
  background: #F8FAFC;
  border-radius: 14rpx;
  padding: 12rpx 14rpx;
  border: 1rpx solid #E2E8F0;
}

.filter-label {
  font-size: 20rpx;
  color: rgba(15, 23, 42, 0.6);
}

.filter-value {
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 6rpx;
}

.filter-actions {
  grid-column: span 2;
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  margin-top: 4rpx;
}

.primary {
  background: #2563EB;
  color: #FFFFFF;
}

.log-row {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.log-row:last-child { border-bottom: none; }
.log-row.view { opacity: 0.55; }

.log-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.log-user {
  font-size: 24rpx;
  font-weight: 600;
}

.log-action-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-weight: 600;
  background: #E2E8F0;
  color: #475569;
}
.log-action-tag.view { background: #F1F5F9; color: #94A3B8; }
.log-action-tag.minor { background: #E0F2FE; color: #0284C7; }
.log-action-tag.normal { background: #EEF2FF; color: #4338CA; }
.log-action-tag.major { background: #DCFCE7; color: #16A34A; }
.log-action-tag.danger { background: #FEE2E2; color: #DC2626; }

.log-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
  margin-bottom: 6rpx;
}
.log-page.muted { color: rgba(15, 23, 42, 0.35); }

.log-detail {
  font-size: 22rpx;
  color: #334155;
  background: #F8FAFC;
  border-radius: 12rpx;
  padding: 10rpx 12rpx;
}

.empty {
  text-align: center;
  padding: 20rpx 0;
  color: rgba(15, 23, 42, 0.5);
}
