page {
  background: #F8FAFC;
  color: #0F172A;
}

.page {
  padding: 24rpx 28rpx 60rpx;
}

.hero-card {
  background: linear-gradient(135deg, #E0F2FE, #DCFCE7);
  border-radius: 24rpx;
  padding: 26rpx;
  box-shadow: 0 18rpx 40rpx rgba(15, 23, 42, 0.1);
  margin-bottom: 20rpx;
}

.hero-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}

.hero-sub {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
}

.list-card {
  background: #FFFFFF;
  border-radius: 18rpx;
  padding: 12rpx 18rpx;
  box-shadow: 0 12rpx 28rpx rgba(15, 23, 42, 0.08);
}

.log-row {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.log-row:last-child { border-bottom: none; }

.log-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.log-user {
  font-size: 24rpx;
  font-weight: 600;
}

.log-action {
  font-size: 22rpx;
  color: #2563EB;
}

.log-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.6);
  margin-bottom: 6rpx;
}

.log-detail {
  font-size: 22rpx;
  color: #334155;
  background: #F8FAFC;
  border-radius: 12rpx;
  padding: 10rpx 12rpx;
}

.empty {
  text-align: center;
  padding: 20rpx 0;
  color: rgba(15, 23, 42, 0.5);
}
