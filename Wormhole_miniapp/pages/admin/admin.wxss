.admin-container { padding: 30rpx; }
.stats-card { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20rpx; background: #F8FAFC; border-radius: 20rpx; padding: 20rpx; margin-bottom: 30rpx; }
.stat-item { background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 8rpx 24rpx rgba(15,23,42,0.08); }
.stat-value { font-size: 40rpx; font-weight: bold; display: block; color: #0F172A; }
.stat-label { font-size: 24rpx; color: #94A3B8; }
.section { background: #fff; border-radius: 20rpx; padding: 24rpx; box-shadow: 0 8rpx 24rpx rgba(15,23,42,0.08); }
.section-title { font-size: 30rpx; font-weight: 600; margin-bottom: 16rpx; }
.admin-input { width: 100%; border: 1rpx solid #E2E8F0; border-radius: 12rpx; padding: 0 20rpx; height: 72rpx; margin-bottom: 16rpx; }
button.primary { background: linear-gradient(135deg, #5EEAD4, #22D3EE); color: #0F172A; border-radius: 12rpx; }
