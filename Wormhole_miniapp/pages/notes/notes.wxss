.notes-container {
  padding: 20rpx;
  position: relative;
  min-height: calc(100vh - 44px - constant(safe-area-inset-top));
  min-height: calc(100vh - 44px - env(safe-area-inset-top));
}

.notes-list {
  padding-bottom: 120rpx;
}

.post { padding: 24rpx; margin-bottom: 20rpx; background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 20rpx; box-shadow: 0 8rpx 24rpx rgba(2,132,199,0.08);} 
.post-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 10rpx; gap: 16rpx; }
.post-info { display: flex; gap: 16rpx; align-items: center; }
.post-actions button { border: none; }
.ghost { background: rgba(15,118,110,0.1); color: #0F766E; border-radius: 999rpx; padding: 0 20rpx; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 24rpx; background: linear-gradient(135deg, #5EEAD4, #22D3EE); display: flex; align-items: center; justify-content: center; color: #0F172A; font-size: 32rpx; font-weight: 600; overflow: hidden; }
.avatar.mini { width: 56rpx; height: 56rpx; border-radius: 18rpx; font-size: 26rpx; }
.avatar image { width: 100%; height: 100%; object-fit: cover; }
.avatar text { width: 100%; text-align: center; }
.user-info .name { font-weight: bold; }
.post-content { margin: 10rpx 0 10rpx; font-size: 30rpx; color: #0F172A; white-space: pre-wrap; word-break: break-word; }
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 6rpx; margin: 10rpx 0; }
.image { width: 100%; height: 200rpx; border-radius: 10rpx; }
.video { width: 100%; border-radius: 8rpx; margin: 10rpx 0; }
.post-action-bar { display: flex; justify-content: space-between; margin-top: 10rpx; align-items: center; }
.likes-avatars { display: flex; gap: 8rpx; align-items: center; flex-wrap: wrap; }
.likes-avatars .avatar-mini { width: 48rpx; height: 48rpx; border-radius: 50%; background: rgba(248,250,252,0.9); color: #0F172A; display: flex; align-items: center; justify-content: center; font-size: 24rpx; font-weight: 600; overflow: hidden; border: 1rpx solid rgba(15,118,110,0.12); }
.likes-avatars .avatar-mini image { width: 100%; height: 100%; object-fit: cover; }
.like-button { display: flex; align-items: center; gap: 8rpx; padding: 8rpx 18rpx; border-radius: 999rpx; border: 1rpx solid #CBD5F5; color: #0F172A; font-size: 24rpx; margin-left: auto; }
.like-button .icon { font-size: 28rpx; }
.like-button.liked { background: rgba(244,114,182,0.15); border-color: rgba(244,114,182,0.4); color: #DB2777; }
.comments { margin-top: 10rpx; padding: 12rpx 16rpx; background: #F8FAFC; border-radius: 16rpx; }
.comment { display: flex; gap: 12rpx; margin-bottom: 12rpx; }
.comment:last-child { margin-bottom: 0; }
.comment-body { flex: 1; }
.comment-header { display: flex; justify-content: space-between; align-items: center; font-size: 24rpx; }
.comment-meta { display: flex; align-items: center; gap: 10rpx; }
.comment-name { font-weight: 600; color: #0F172A; }
.comment-time { font-size: 22rpx; color: #94A3B8; }
.comment-content { margin-top: 4rpx; font-size: 28rpx; color: #1E293B; white-space: pre-wrap; word-break: break-word; }
.comment-box { display: flex; gap: 10rpx; margin-top: 10rpx; }
.comment-input { flex: 1; background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 12rpx; padding: 0 20rpx; height: 72rpx; color: #0F172A; }

.note-time {
  font-size: 24rpx;
  color: #999;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(18,150,219,0.3);
}

.add-icon {
  color: white;
  font-size: 60rpx;
  line-height: 1;
} 

button.link-button {
  background: transparent;
  border: 1rpx solid rgba(15,118,110,0.3);
  color: #0F766E;
  border-radius: 999rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
}
.comment-avatar { display: flex; align-items: flex-start; }
