.notes-container {
  height: 100vh;
  padding: 20rpx;
  position: relative;
}

.notes-list {
  padding-bottom: 120rpx;
}

.post { padding: 24rpx; margin-bottom: 20rpx; background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 20rpx; box-shadow: 0 8rpx 24rpx rgba(2,132,199,0.08);} 
.post-header { display: flex; gap: 16rpx; align-items: center; margin-bottom: 10rpx; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background: linear-gradient(135deg, #5EEAD4, #22D3EE); }
.user-info .name { font-weight: bold; }
.post-content { margin: 10rpx 0 10rpx; font-size: 30rpx; color: #0F172A; }
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 6rpx; margin: 10rpx 0; }
.image { width: 100%; height: 200rpx; border-radius: 10rpx; }
.video { width: 100%; border-radius: 8rpx; margin: 10rpx 0; }
.comment-box { display: flex; gap: 10rpx; margin-top: 10rpx; }
.comment-input { flex: 1; background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 12rpx; padding: 0 20rpx; height: 72rpx; color: #0F172A; }

.note-time {
  font-size: 24rpx;
  color: #999;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(18,150,219,0.3);
}

.add-icon {
  color: white;
  font-size: 60rpx;
  line-height: 1;
} 
