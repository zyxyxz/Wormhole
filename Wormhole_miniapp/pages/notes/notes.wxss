.notes-container {
  padding: 20rpx;
  position: relative;
  min-height: calc(100vh - 44px - constant(safe-area-inset-top));
  min-height: calc(100vh - 44px - env(safe-area-inset-top));
}

.notes-list {
  padding-bottom: 120rpx;
}

.post { padding: 24rpx; margin-bottom: 20rpx; background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 20rpx; box-shadow: 0 8rpx 24rpx rgba(2,132,199,0.08);} 
.post-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 10rpx; gap: 16rpx; }
.post-info { display: flex; gap: 16rpx; align-items: center; }
.post-actions button { border: none; }
.ghost { background: rgba(15,118,110,0.1); color: #0F766E; border-radius: 999rpx; padding: 0 20rpx; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background: linear-gradient(135deg, #5EEAD4, #22D3EE); }
.user-info .name { font-weight: bold; }
.post-content { margin: 10rpx 0 10rpx; font-size: 30rpx; color: #0F172A; }
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 6rpx; margin: 10rpx 0; }
.image { width: 100%; height: 200rpx; border-radius: 10rpx; }
.video { width: 100%; border-radius: 8rpx; margin: 10rpx 0; }
.comments { margin-top: 10rpx; padding: 12rpx 16rpx; background: #F8FAFC; border-radius: 16rpx; }
.comment { margin-bottom: 12rpx; }
.comment:last-child { margin-bottom: 0; }
.comment-header { display: flex; justify-content: space-between; align-items: baseline; font-size: 24rpx; }
.comment-name { font-weight: 600; color: #0F172A; }
.comment-time { font-size: 22rpx; color: #94A3B8; }
.comment-content { margin-top: 4rpx; font-size: 28rpx; color: #1E293B; }
.comment-box { display: flex; gap: 10rpx; margin-top: 10rpx; }
.comment-input { flex: 1; background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 12rpx; padding: 0 20rpx; height: 72rpx; color: #0F172A; }

.note-time {
  font-size: 24rpx;
  color: #999;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(18,150,219,0.3);
}

.add-icon {
  color: white;
  font-size: 60rpx;
  line-height: 1;
} 
