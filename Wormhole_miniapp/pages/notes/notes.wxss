page {
  overflow: hidden;
}

.notes-container {
  position: relative;
  height: calc(100vh - 44px - constant(safe-area-inset-top));
  height: calc(100vh - 44px - env(safe-area-inset-top));
  display: flex;
  flex-direction: column;
  min-height: 0;
  background: var(--bg);
  color: var(--text);
}

.notes-scroll {
  flex: 1;
  height: 100%;
  min-height: 0;
  padding: 20rpx;
  box-sizing: border-box;
}

.activity-entry {
  display: flex;
  align-items: center;
  gap: 14rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  background: var(--surface);
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  box-shadow: var(--shadow-soft);
}

.activity-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 14rpx;
  background: linear-gradient(135deg, var(--accent-cyan), var(--accent-green));
  box-shadow: 0 6rpx 12rpx rgba(20, 184, 166, 0.2);
}

.activity-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.activity-arrow {
  margin-left: auto;
  font-size: 34rpx;
  color: var(--text-muted);
}

.notes-list {
  padding-bottom: 120rpx;
}

.post { padding: 24rpx; margin-bottom: 20rpx; background: var(--surface); border: 1rpx solid var(--border); border-radius: 20rpx; box-shadow: var(--shadow);} 
.post-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 10rpx; gap: 16rpx; }
.post-info { display: flex; gap: 16rpx; align-items: center; }
.post-actions button { border: none; }
.ghost { background: rgba(15,118,110,0.1); color: var(--primary-strong); border-radius: 999rpx; padding: 0 20rpx; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 24rpx; background: linear-gradient(135deg, var(--accent-teal), var(--accent-cyan)); display: flex; align-items: center; justify-content: center; color: var(--text); font-size: 32rpx; font-weight: 600; overflow: hidden; }
.avatar.mini { width: 56rpx; height: 56rpx; border-radius: 18rpx; font-size: 26rpx; }
.avatar image { width: 100%; height: 100%; object-fit: cover; }
.avatar text { width: 100%; text-align: center; }
.user-info .name { font-weight: bold; }
.post-content { margin: 10rpx 0 10rpx; font-size: 30rpx; color: var(--text); white-space: pre-wrap; word-break: break-word; }
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 6rpx; margin: 10rpx 0; }
.image { width: 100%; height: 200rpx; border-radius: 10rpx; }
.video { width: 100%; border-radius: 8rpx; margin: 10rpx 0; }
.post-action-bar { display: flex; justify-content: space-between; margin-top: 10rpx; align-items: center; }
.likes-avatars { display: flex; gap: 8rpx; align-items: center; flex-wrap: wrap; }
.likes-avatars .avatar-mini { width: 48rpx; height: 48rpx; border-radius: 50%; background: var(--bg-secondary); color: var(--text); display: flex; align-items: center; justify-content: center; font-size: 24rpx; font-weight: 600; overflow: hidden; border: 1rpx solid rgba(15,118,110,0.12); }
.likes-avatars .avatar-mini image { width: 100%; height: 100%; object-fit: cover; }
.like-button { display: flex; align-items: center; gap: 8rpx; padding: 8rpx 18rpx; border-radius: 999rpx; border: 1rpx solid var(--border); color: var(--text); font-size: 24rpx; margin-left: auto; }
.like-icon {
  position: relative;
  width: 26rpx;
  height: 22rpx;
}
.heart-circle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: currentColor;
  top: 0;
}
.heart-circle.left { left: 0; }
.heart-circle.right { right: 0; }
.heart-square {
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: currentColor;
  left: 6rpx;
  top: 6rpx;
  transform: rotate(45deg);
  border-radius: 2rpx;
}
.like-button.liked { background: var(--like-bg); border-color: var(--like-border); color: var(--like-accent); }
.comments { margin-top: 10rpx; padding: 12rpx 16rpx; background: var(--panel); border-radius: 16rpx; }
.comment { display: flex; gap: 12rpx; margin-bottom: 12rpx; }
.comment:last-child { margin-bottom: 0; }
.comment-body { flex: 1; }
.comment-header { display: flex; justify-content: space-between; align-items: center; font-size: 24rpx; }
.comment-meta { display: flex; align-items: center; gap: 10rpx; }
.comment-name { font-weight: 600; color: var(--text); }
.comment-time { font-size: 22rpx; color: var(--text-muted); }
.comment-content { margin-top: 4rpx; font-size: 28rpx; color: var(--text); white-space: pre-wrap; word-break: break-word; }
.comment-box { display: flex; gap: 10rpx; margin-top: 10rpx; }
.comment-input { flex: 1; background: var(--input); border: 1rpx solid var(--border); border-radius: 12rpx; padding: 0 20rpx; height: 72rpx; color: var(--text); }
.comment-send {
  height: 72rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
  font-size: 26rpx;
}

.note-time {
  font-size: 24rpx;
  color: var(--text-muted);
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, var(--accent-cyan), var(--accent-green));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-soft);
}

.add-icon {
  color: white;
  font-size: 60rpx;
  line-height: 1;
} 

button.link-button {
  background: transparent;
  border: 1rpx solid rgba(15,118,110,0.3);
  color: var(--primary-strong);
  border-radius: 999rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
}
.comment-avatar { display: flex; align-items: flex-start; }
