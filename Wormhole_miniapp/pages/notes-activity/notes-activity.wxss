page {
  overflow: hidden;
}

.activity-page {
  height: calc(100vh - 44px - constant(safe-area-inset-top));
  height: calc(100vh - 44px - env(safe-area-inset-top));
  display: flex;
  flex-direction: column;
  min-height: 0;
  background: var(--bg);
  color: var(--text);
}

.activity-scroll {
  flex: 1;
  height: 100%;
  min-height: 0;
  padding: 20rpx;
  box-sizing: border-box;
}

.activity-list {
  padding-bottom: 120rpx;
}

.activity-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: var(--surface);
  border: 1rpx solid var(--border);
  border-radius: 18rpx;
  box-shadow: var(--shadow-soft);
}

.activity-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, var(--accent-teal), var(--accent-cyan));
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text);
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  flex-shrink: 0;
}

.activity-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.activity-body {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.activity-header .name {
  font-weight: 600;
  font-size: 28rpx;
  color: var(--text);
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-action {
  font-size: 24rpx;
  color: var(--text-muted);
}

.comment-preview {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: var(--text);
}

.post-preview {
  margin-top: 6rpx;
  padding: 12rpx;
  background: var(--panel);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.post-text {
  flex: 1;
  font-size: 24rpx;
  color: var(--text);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.preview-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.preview-video {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: rgba(15, 23, 42, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
  font-size: 22rpx;
  flex-shrink: 0;
}

.load-more {
  text-align: center;
  padding: 16rpx 0 30rpx;
  font-size: 24rpx;
  color: var(--text-muted);
}

.muted {
  color: var(--text-muted);
}
