.container { padding: 24rpx; background: var(--bg); color: var(--text); min-height: 100vh; }
.title { height: 80rpx; background: var(--input); border-radius: 8rpx; padding: 0 20rpx; margin-bottom: 20rpx; color: var(--text); }
.content { height: 500rpx; background: var(--input); border-radius: 8rpx; padding: 20rpx; color: var(--text); }
.row { display: flex; justify-content: space-between; align-items: center; margin-top: 20rpx; }
.label { color: var(--text-muted); }
.save { margin-top: 24rpx; background: var(--primary); color: #fff; }
