/* Typography */
.text-title { font-size: 36rpx; font-weight: 700; color: var(--text); }
.text-subtitle { font-size: 28rpx; color: var(--text-muted); }
.text-body { font-size: 30rpx; color: var(--text); }
.muted { color: var(--text-muted); }

/* Colors */
.primary { color: var(--primary); }
.bg-primary { background: var(--primary); color: #fff; }
.bg-card { background: var(--surface); }
.bg-page { background: var(--bg); }

/* Card */
.card { background: var(--surface); border-radius: 20rpx; box-shadow: var(--shadow); }
.card-pad { padding: 28rpx; }

/* Buttons */
.btn { height: 84rpx; line-height: 84rpx; border-radius: 12rpx; text-align: center; }
.btn-primary { background: var(--primary); color: #fff; }
.btn-ghost { background: var(--bg-secondary); color: var(--text); }
.btn-danger { background: var(--danger); color: #fff; }

/* Action chips */
.chip { background: var(--chip); color: var(--text); border-radius: 24rpx; padding: 8rpx 16rpx; font-size: 24rpx; }

/* Spacing utilities */
.p-16 { padding: 16rpx; } .p-20 { padding: 20rpx; } .p-24 { padding: 24rpx; } .p-28 { padding: 28rpx; }
.m-8 { margin: 8rpx; } .m-12 { margin: 12rpx; } .m-16 { margin: 16rpx; } .m-20 { margin: 20rpx; } .m-24 { margin: 24rpx; }
.mt-16 { margin-top: 16rpx; } .mt-24 { margin-top: 24rpx; } .mb-16 { margin-bottom: 16rpx; } .mb-24 { margin-bottom: 24rpx; }

/* Divider */
.divider { height: 1rpx; background: var(--border); margin: 16rpx 0; }

/* Avatar */
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background: var(--bg-secondary); }

/* Skeleton shimmer */
@keyframes shimmer { 0% { opacity: 0.6; } 50% { opacity: 1; } 100% { opacity: 0.6; } }
.skeleton { background: var(--bg-secondary); border-radius: 10rpx; animation: shimmer 1.6s infinite; }
