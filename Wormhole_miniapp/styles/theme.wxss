/* Global theme for modern app look */

page { background: #F7F8FA; color: #111; }

/* Typography */
.text-title { font-size: 36rpx; font-weight: 700; color: #111; }
.text-subtitle { font-size: 28rpx; color: #666; }
.text-body { font-size: 30rpx; color: #333; }
.muted { color: #9AA0A6; }

/* Colors */
.primary { color: #0A84FF; }
.bg-primary { background: #0A84FF; color: #fff; }
.bg-card { background: #fff; }
.bg-page { background: #F7F8FA; }

/* Card */
.card { background: #fff; border-radius: 20rpx; box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.05); }
.card-pad { padding: 28rpx; }

/* Buttons */
.btn { height: 84rpx; line-height: 84rpx; border-radius: 12rpx; text-align: center; }
.btn-primary { background: #0A84FF; color: #fff; }
.btn-ghost { background: #F1F3F4; color: #111; }
.btn-danger { background: #FF3B30; color: #fff; }

/* Action chips */
.chip { background: #F1F3F4; color: #111; border-radius: 24rpx; padding: 8rpx 16rpx; font-size: 24rpx; }

/* Spacing utilities */
.p-16 { padding: 16rpx; } .p-20 { padding: 20rpx; } .p-24 { padding: 24rpx; } .p-28 { padding: 28rpx; }
.m-8 { margin: 8rpx; } .m-12 { margin: 12rpx; } .m-16 { margin: 16rpx; } .m-20 { margin: 20rpx; } .m-24 { margin: 24rpx; }
.mt-16 { margin-top: 16rpx; } .mt-24 { margin-top: 24rpx; } .mb-16 { margin-bottom: 16rpx; } .mb-24 { margin-bottom: 24rpx; }

/* Divider */
.divider { height: 1rpx; background: #ECEFF1; margin: 16rpx 0; }

/* Avatar */
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background: #E9EEF3; }

/* Skeleton shimmer */
@keyframes shimmer { 0% { opacity: 0.6; } 50% { opacity: 1; } 100% { opacity: 0.6; } }
.skeleton { background: #E9EEF3; border-radius: 10rpx; animation: shimmer 1.6s infinite; }

