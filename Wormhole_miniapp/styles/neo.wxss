/* Neo Tech / ACG inspired theme */

/* Light Aqua/Teal theme */
page { background: linear-gradient(135deg, #ECFEFF 0%, #F0FDFA 100%); color: #0F172A; }

/* Decorative aurora blobs */
.aurora-bg { position: fixed; inset: 0; z-index: -1; overflow: hidden; }
.blob { position: absolute; filter: blur(50rpx); opacity: 0.22; border-radius: 50%; }
.blob.cyan { background: radial-gradient(closest-side, #22D3EE, transparent); }
.blob.purple { background: radial-gradient(closest-side, #5EEAD4, transparent); }
.blob.pink { background: radial-gradient(closest-side, #A7F3D0, transparent); }

/* Glass card */
.glass { background: rgba(255,255,255,0.8); backdrop-filter: blur(20rpx); border: 1rpx solid rgba(15,23,42,0.06); border-radius: 20rpx; box-shadow: 0 8rpx 24rpx rgba(2,132,199,0.08); }
.glass-pad { padding: 28rpx; }

/* Neon buttons */
.btn-neon { height: 88rpx; line-height: 88rpx; border-radius: 16rpx; text-align: center; color: #0F172A; background: linear-gradient(135deg, #5EEAD4, #22D3EE); box-shadow: 0 10rpx 24rpx rgba(45,212,191,0.25); }
.btn-outline { height: 72rpx; line-height: 72rpx; border-radius: 16rpx; text-align: center; color: #0F172A; background: #FFFFFF; border: 1rpx solid #E2E8F0; }

/* Inputs */
.input-glass { background: #FFFFFF; border: 1rpx solid #E2E8F0; border-radius: 14rpx; color: #0F172A; }

/* Chips */
.chip-neo { background: #E6FFFA; color: #0F766E; border: 1rpx solid #99F6E4; border-radius: 999rpx; padding: 8rpx 16rpx; font-size: 24rpx; }

/* Avatars */
.avatar-neo { background: linear-gradient(135deg, #5EEAD4, #22D3EE); }

/* Floating home button */
.home-fab { position: fixed; top: 24rpx; left: 24rpx; z-index: 1000; background: rgba(255,255,255,0.9); color: #0F766E; border: 1rpx solid #BAF2E3; border-radius: 999rpx; padding: 10rpx 20rpx; font-size: 26rpx; box-shadow: 0 8rpx 20rpx rgba(2,132,199,0.12); }

/* Typography */
.title-neo { font-size: 48rpx; font-weight: 900; color: #0F172A; letter-spacing: 1rpx; }
.subtitle-neo { color: #475569; }
